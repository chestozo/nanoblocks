{button}_size_l {
    padding: 3px 12px;
    font-size: 15px;

    &:active {
        padding: 4px 12px 2px;

        input&:hover,
        button&:hover, x:-o-prefocus {
            padding: 3px 13px 3px 11px;
        }
    }
    & > {button}__arrow {
        width: 16px;
        height: 16px;

        &:before {
            top: 3px;
        }
    }

    &{button}_arrowed,
    &{button}_arrowed:active {
        padding-right: 11px;
        margin-right: 10px;
    }
}
