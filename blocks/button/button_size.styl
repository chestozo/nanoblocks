/* Small Button*/
{button}_size_s {
    padding: 1px 8px;

    &:active {
        padding: 2px 8px 0px;

        input&:hover,
        button&:hover, x:-o-prefocus {
            padding: 1px 9px 1px 7px;
        }
    }

    &>{button}__arrow {
        width: 11px;
        height: 11px;
    }

    &{button}_arrowed,
    &{button}_arrowed:active {
        padding-right: 7px;
        margin-right: 6px;
    }
}

